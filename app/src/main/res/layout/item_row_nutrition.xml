<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_sm"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_centerVertical="true"
        android:id="@+id/abbreviation_layout"
        android:layout_marginBottom="@dimen/margin_lg"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners_profile"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/abbreviation"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_md"
            tools:text="KO"/>

    </FrameLayout>

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_toEndOf="@id/abbreviation_layout"
       android:layout_marginStart="@dimen/margin_md"
       android:layout_centerVertical="true">

       <TextView
           android:layout_marginStart="@dimen/margin_md"
           android:layout_width="match_parent"
           tools:text="Banaana"
           android:id="@+id/name"
           android:layout_marginBottom="@dimen/margin_sm"
           android:textSize="@dimen/text_md"
           android:layout_height="wrap_content"/>

       <TextView
           android:layout_marginStart="@dimen/margin_md"
           android:layout_width="match_parent"
           tools:text="another one"
           android:id="@+id/genus"
           android:textSize="@dimen/text_sm"
           android:layout_height="wrap_content"/>

   </LinearLayout>


</RelativeLayout>